<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <data>-->
    <!--        <variable-->
    <!--            name="cust"-->
    <!--            type="com.example.uts_pbp_c_kelompok_3.Pendaftaran.Pendaftaran"/>-->
    <!--        <variable-->
    <!--            name="activity"-->
    <!--            type="com.example.uts_pbp_c_kelompok_3.Pendaftaran.DataCustomer" />-->
    <!--    </data>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>
        <ScrollView
            android:layout_below="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/twNama"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:hint="Nama ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNama"
                            android:inputType="text"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/twNomorTelp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:hint="Nomor Telepon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNomorTelp"
                            android:inputType="number"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/twProduk"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:hint="Produk">

                        <AutoCompleteTextView
                            android:id="@+id/etProduk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"


                            />
<!--                        android:onClick="@{activity.btnProduk}"-->
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/twNamaPencukur"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:hint="Nama Pencukur">

                        <AutoCompleteTextView
                            android:id="@+id/etNamaPencukur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="nama_pencukur"
                            />
<!--                        android:onClick="@{activity.btnNamaPencukur}"-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/twTanggal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:hint="Tanggal ">
                        <AutoCompleteTextView
                            android:id="@+id/etTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="tanggal"/>
                        <!--                            android:onClick="@{activity.btnTanggal}"/>-->
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:background="@color/white"
            android:padding="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="90dp"
                android:backgroundTint="@color/purple_200"
                android:fontFamily="sans-serif-condensed-medium"

                android:text="CANCEL"
                android:textColor="@color/black" />
<!--            android:onClick="@{activity.btnBackClicklistener}"-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="90dp"
                android:backgroundTint="@color/purple_200"

                android:text="SUBMIT"
                android:textColor="@color/black" />
<!--            android:onClick="@{activity.btnSubmit}"-->
        </RelativeLayout>
    </RelativeLayout>

</layout>